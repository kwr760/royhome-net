[ignore]
.*/node_modules/.*\.json$
.*/dist/.*\.js$

[include]

[libs]
./flow-typed/.*

[untyped]

[lints]
all=warn
ambiguous-object-type=error
deprecated-type=error
deprecated-utility=error
nonstrict-import=error
sketchy-null=error
sketchy-number=error
unnecessary-invariant=error
unnecessary-optional-chain=error
unsafe-getters-setters=error
untyped-import=error
untyped-type-import=error

[options]
module.file_ext=.js
module.file_ext=.jsx
module.file_ext=.json
module.file_ext=.css
module.file_ext=.scss
module.file_ext=.html
module.file_ext=.md
module.name_mapper.extension='css' -> 'empty/object'
module.name_mapper.extension='scss' -> 'empty/object'
module.name_mapper.extension='html' -> 'empty/string'
module.name_mapper.extension='md' -> 'empty/object'
module.name_mapper='^@src' ->'<PROJECT_ROOT>/src'
module.name_mapper='^@config' ->'<PROJECT_ROOT>/src/config'
module.name_mapper='^@common' ->'<PROJECT_ROOT>/src/common'
module.name_mapper='^@api' ->'<PROJECT_ROOT>/src/api'
module.name_mapper='^@web' ->'<PROJECT_ROOT>/src/web'

[strict]
nonstrict-import
unsafe-getters-setters
untyped-import
untyped-type-import
