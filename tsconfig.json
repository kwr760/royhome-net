{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es6",
    "outDir": "build",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "typeRoots" : [
      "node_modules/@types",
      "src/types"
    ]
  },
  "include": [
    "src/types",
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
